<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_extra_large" />
            <solid android:color="@color/font_light_opacity_32" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_extra_large" />
            <solid android:color="@color/green_button_active" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_extra_large" />
            <solid android:color="@color/green_button_default" />
        </shape>
    </item>



</selector>