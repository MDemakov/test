<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/blue_button" android:state_pressed="true">

        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_extra_large" />
            <solid android:color="@color/border" />
        </shape>

    </item>

    <item android:color="@color/font_body" android:state_pressed="false">

        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_extra_large" />
            <solid android:color="@color/border" />
        </shape>

    </item>

</selector>